{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext","DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": [".vitepress/src/*"]
    },
    "strict": true,
    "jsx": "preserve"
  },

  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    ".vitepress/**/*.js",
    ".vitepress/**/*.d.ts",
    ".vitepress/config.mts"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    ".vitepress/cache"
  ]
}
