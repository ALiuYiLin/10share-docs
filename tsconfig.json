{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext","DOM"],
    // "types": ["vitepress"],
    // "typeRoots": ["./.vitepress/types"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [".vitepress/*"]
    }
  },
  "include": [
    ".vitepress",
    ".vitepress/theme/index.ts",
    ".vitepress/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
